<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        </div>
         </div>
         
        <!-- login start-->
        <div class="navbar-nav">
          <% if (user){ %>
            <!-- logout start -->
            <form class="form-inline my-2 my-lg-0" action="/logout" method="POST">
              <span style="margin-right: 1em">
                <b> Logged In As: </b> <%= user.email %>
              </span>
              <button type="submit" class="btn btn-outline-dark">Logout</button>
            </form>
            <!-- logout end -->
          <% } else { %>
            <a class="btn btn-outline-dark" href="/login" role="button" style="margin-right:1em">Login</a>
            <a class="btn btn-outline-dark" href="/register" role="button">Register</a>
        <% } %>
        </div>
        <!-- login end -->
  </nav>
</header>